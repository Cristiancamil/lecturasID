<div class="main-title mb-10 flex flex-col px-10 items-center justify-center">
    <h1> Dispositivos </h1>
</div>

<div class="flex h-16 items-center justify-evenly">
    <div class="flex flex-col px-10 items-center justify-center rounded-lg">

        <%= form_with url: devices_path, method: :get, local: true do |form| %>
            <%= form.text_field :query, style: "width: 8rem;" %>
            <%= form.submit "Search", class: "btn-primary bg-green-800 px-3 py-2" %>
        <% end %>
    </div>
    <%= link_to "Nuevo Dispositivo", new_device_path, class: "bg-gray-700 text-white rounded-md px-3 py-2 text-sm font-medium" %> 
</div>

<div class="w-full sm:w-3/4 md:w-2/3 lg:w-1/2 xl:w-1/3 min-w-full divide-y divide-gray-200 p-6">
    <table style="width: 100%">
        <thead class="bg-gray-50 border-b-2 border-gray-200">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 tracking-wider w-2/0">No</th>    
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/0">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/9">Bodega</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/9">Local</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/9">Factor</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Acciones</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% if @all_device.present? %>
                <% @all_device.each_with_index do |device, index| %>
                    <tr class="bg-white hover:bg-green-100">
                        <td class="px-6 py-4 whitespace-nowrap w-1/9"><%= index + 1 %></td>
                        <td class="px-6 py-4 whitespace-nowrap w-1/9"><%= device.id %></td>
                        <td class="px-6 py-4 whitespace-nowrap w-1/9"><%= device.bodega %></td>
                        <td class="px-6 py-4 whitespace-nowrap w-1/9"><%= device.local %></td>
                        <td class="px-6 py-4 whitespace-nowrap w-1/9"><%= device.factor %></td>
                        <td class="flex justify-start pt-2 w-1/9">
                            <%= link_to 'Editar', edit_device_path(device), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 pl-5 rounded" %> 
                            <%= button_to 'Eliminar', device_path(device.id), method: :delete, 
                                class: "bg-red-500 text-white font-bold py-2 px-4 rounded",
                                data: {
                                    turbo_method: 'delete',
                                    turbo_confirm: 'EstÃ¡ seguro que desea eliminar'
                                } %>
                        </td>
                    </tr>
                <% end %>

            <% end %>
        </tbody>
    </table>
</div>




